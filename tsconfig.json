{
  "compilerOptions": {
    "module": "es2015",
    "lib": ["dom", "es2015"],
    "types": ["jest"],
    "typeRoots": ["@types", "./node_modules/@types"],
    "moduleResolution": "node",
    "strict": true,
    "noEmit": true,
    "baseUrl": "src",
    "rootDir": ".",
    "paths": {
      "src/*": ["src/*"]
    }
  },
  "include": ["src/**/*", "src/@types/*"],
  "exclude": ["node_modules", "dist"]
}
